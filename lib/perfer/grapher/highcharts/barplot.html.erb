<!DOCTYPE HTML>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title><%= title %></title>

    <script type="text/javascript" src="./Highcharts-4.0.1/jquery.min.js"></script>
    <script type="text/javascript" src="./Highcharts-4.0.1/js/highcharts.js"></script>
    <script type="text/javascript" src="./Highcharts-4.0.1/js/modules/exporting.js"></script>

    <script type="text/javascript">
$(function () {
  $('#container').highcharts({
    chart: {
      type: 'column'
    },
    title: {
      text: 'Comparing ' + <%= title.to_json %> + ' of different Ruby implementations'
    },
    xAxis: {
      categories: <%= categories.to_json %>
    },
    yAxis: {
      min: 0,
      title: {
        text: 'Time / iteration (<%= unit %>)'
      }
    },
    tooltip: {
      headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
      pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
      '<td style="padding:0;text-align:right"><b>{point.y} <%= unit %></b></td></tr>',
      footerFormat: '</table>',
      shared: true,
      useHTML: true
    },
    plotOptions: {
      column: {
        pointPadding: 0.2,
        borderWidth: 0
      }
    },
    series: <%= series.to_json %>
  });
});
    </script>
  </head>
  <body>
    <div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
  </body>
</html>
